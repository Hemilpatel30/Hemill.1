
#include <stdio.h>

int main() {
    int a, b;
    float result;

    printf("Enter first number (numerator): ");
    scanf("%d", &a);

    printf("Enter second number (denominator): ");
    scanf("%d", &b);

    if (b != 0) {
        result = (float)a / b;   // typecasting to get decimal result
        printf("Division = %.2f\n", result);
    } else {
        printf("Error! Division by zero is not allowed.\n");
    }

    return 0;
}
