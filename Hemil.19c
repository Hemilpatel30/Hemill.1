#include <stdio.h>

int main() {
    float radius, area;

    // Taking input
    printf("Enter radius of the circle: ");
    scanf("%f", &radius);

    // Formula calculation
    area = (22.0 / 7.0) * radius * radius;

    // Display result
    printf("Area of Circle = %.2f\n", area);

    return 0;
}

